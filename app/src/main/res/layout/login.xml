<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#795191"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafi715.rimeapplication.Login">

    <!--<EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/contactnumber"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:hint="USER CONTACT NUMBER"
        android:textAlignment="center"
        android:textColor="#795191"
        android:textColorHint="#795191"
        android:textSize="20dp"
        android:layout_above="@+id/loginSubmit"
        android:layout_alignStart="@+id/labelRegistration"/> -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/contactNumber"
        android:background="@drawable/rounded_edittext"
        android:hint="USER CONTACT NUMBER"
        android:textColorHint="@color/colorAppBackground"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/profilePicture"
        android:layout_alignEnd="@+id/labelRegistration" />

    <Button
        android:id="@+id/loginSubmit"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:text="SUBMIT"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/labelRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="REGISTRATION"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F1F0FF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/profileupload"
        android:layout_below="@+id/labelRegistration"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
